<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.edmardiaz.scuoladeibambini.AssessmentActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"></include>

        <ImageView
            android:id="@+id/instruction_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/instruction_1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_container"
            android:layout_width="144dp"
            android:layout_height="122dp"
            android:background="@drawable/ten"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/instruction_1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/instruction_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/instruction_2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_container"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />


        <RadioButton
            android:id="@+id/radio_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="36dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instruction_2"
            android:layout_marginStart="48dp" />

        <RadioButton
            android:id="@+id/radio_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="36dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintLeft_toRightOf="@+id/btn_a"
            app:layout_constraintTop_toBottomOf="@+id/instruction_2" />

        <RadioButton
            android:id="@+id/radio_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_a"
            android:layout_marginStart="48dp" />

        <RadioButton
            android:id="@+id/radio_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintLeft_toRightOf="@+id/btn_b"
            app:layout_constraintTop_toBottomOf="@+id/radio_c"
            android:layout_marginStart="70dp" />

        <ImageButton
            android:id="@+id/btn_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen"
            app:layout_constraintLeft_toRightOf="@+id/radio_b"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_a"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btn_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/instruction_2"
            app:layout_constraintLeft_toRightOf="@+id/radio_a"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_next"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_d"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/btn_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen"
            app:layout_constraintLeft_toRightOf="@+id/radio_c"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/instruction_2"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btn_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_c"
            app:layout_constraintLeft_toRightOf="@+id/radio_d"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cat_back"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_b"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/btn_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:background="@drawable/btn_en"
            app:layout_constraintLeft_toRightOf="@+id/btn_back"
            app:srcCompat="@drawable/btn_en"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_b"
            android:layout_marginStart="32dp" />

        <ImageButton
            android:id="@+id/btn_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_it"
            app:layout_constraintRight_toLeftOf="@+id/btn_next"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_d"
            android:layout_marginEnd="32dp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Choice 3"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_2" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Choice 2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Choice 1"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instruction_2" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
