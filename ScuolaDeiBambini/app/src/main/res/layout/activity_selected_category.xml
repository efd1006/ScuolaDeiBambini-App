<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.edmardiaz.scuoladeibambini.SelectedCategoryActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/img_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/english"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_italian"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_italian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/italian"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_container"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/img_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/apple"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />

        <ImageButton
            android:id="@+id/btn_cat_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_cat_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_english"
            android:layout_marginStart="30dp" />

        <ImageButton
            android:id="@+id/btn_listen"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_listen"
            app:layout_constraintLeft_toRightOf="@+id/btn_home"
            app:layout_constraintTop_toBottomOf="@+id/img_english"
            android:layout_marginStart="5dp" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_menu"
            app:layout_constraintLeft_toRightOf="@+id/btn_cat_back"
            app:layout_constraintTop_toBottomOf="@+id/img_english"
            android:layout_marginStart="5dp" />

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_info"
            app:layout_constraintLeft_toRightOf="@+id/btn_listen"
            app:layout_constraintTop_toBottomOf="@+id/img_english"
            android:layout_marginStart="5dp" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_next"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/btn_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_english"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp" />

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"></include>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
